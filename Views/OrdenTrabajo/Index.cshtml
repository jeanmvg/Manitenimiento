@model IEnumerable<MantenimientoEquipos.Models.OrdenTrabajo>

<h2>Órdenes de Trabajo</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Nueva Orden</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NumeroOrden)</th>
            <th>@Html.DisplayNameFor(model => model.Equipo.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NumeroOrden</td>
                <td>@item.Equipo.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Estado</td>
                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@(item.FechaFin.HasValue ? item.FechaFin.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">✏ Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">🗑 Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
