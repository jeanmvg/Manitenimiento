@model MantenimientoEquipos.Models.OrdenTrabajo

<h2>Crear Orden de Trabajo</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <div class="form-group">
        <label asp-for="NumeroOrden"></label>
        <input asp-for="NumeroOrden" class="form-control" readonly />
        <input type="hidden" asp-for="NumeroOrden" />
    </div>

    <div class="form-group">
        <label asp-for="EquipoId"></label>
        <select asp-for="EquipoId" class="form-control" asp-items="@(new SelectList(ViewBag.Equipos, "Id", "Nombre"))">
            <option value="">Seleccione un equipo</option>
        </select>
        <span asp-validation-for="EquipoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control" required></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoMantenimiento"></label>
        <select asp-for="TipoMantenimiento" class="form-control">
            <option value="">Seleccione el tipo de mantenimiento</option>
            <option value="Preventivo">Preventivo</option>
            <option value="Correctivo">Correctivo</option>
            <option value="Predictivo">Predictivo</option>
        </select>
        <span asp-validation-for="TipoMantenimiento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="Pendiente">Pendiente</option>
            <option value="En Proceso">En Proceso</option>
            <option value="Completado">Completado</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicio"></label>
        <input asp-for="FechaInicio" class="form-control" type="date" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaFin"></label>
        <input asp-for="FechaFin" class="form-control" type="date" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">💾 Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
