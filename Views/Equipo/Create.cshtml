@model MantenimientoEquipos.Models.Equipo

<h2>Registrar Nuevo Equipo</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="alert alert-danger"></div>
    <div class="form-group">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ubicacion"></label>
        <select asp-for="Ubicacion" class="form-control">
            <option value="Cuarto de Máquinas">Cuarto de Máquinas</option>
            <option value="Desorción">Desorción</option>
            <option value="Fundición">Fundición</option>
            <option value="Hidrometalurgia">Hidrometalurgia</option>
            <option value="Laboratorio">Laboratorio</option>
            <option value="Refinación">Refinación</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="Activo">Activo</option>
            <option value="Inactivo">Inactivo</option>
            <option value="En Reparación">En Reparación</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Fabricante"></label>
        <input asp-for="Fabricante" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumeroSerie"></label>
        <input asp-for="NumeroSerie" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Capacidad"></label>
        <input asp-for="Capacidad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FrecuenciaMantenimiento"></label>
        <select asp-for="FrecuenciaMantenimiento" class="form-control">
            <option value="Semanal">Semanal</option>
            <option value="Qunicenal">Quincenal</option>
            <option value="Mensual">Mensual</option>
            <option value="Bimestral">Bimestral</option>
            <option value="Trimestral">Trimestral</option>
            <option value="Semestral">Semestral</option>
            <option value="Anual">Anual</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CostoAproximado"></label>
        <input asp-for="CostoAproximado" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="VidaUtil"></label>
        <input asp-for="VidaUtil" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="FechaCompra"></label>
        <input asp-for="FechaCompra" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
